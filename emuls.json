{
  "name": "emuls",
  "description": "Sensors emulator",
  "module": "emuls.js",
  "single": 0,
  "restartOnChannelsChange": 0,

  "params": [],

  "chpattern": [
    {
      "name": "desc",
      "note": "$Type",
      "type": "droplist",
      "data": [
        { "id": "AI", "name": "$AI" },
        { "id": "DI", "name": "$DI" },
        { "id": "Meter", "name": "$Meter" }
      ]
    },
    { "name": "period", "note": "Period ms", "type": "number" },
    {
      "name": "min",
      "note": "Min",
      "type": "number",
      "visible": "data.desc == 'AI'"
    },
    {
      "name": "max",
      "note": "Max",
      "type": "number",
      "visible": "data.desc == 'AI'"
    },
    {
      "name": "delta",
      "note": "$Delta",
      "type": "number",
      "visible": "data.desc == 'AI'"
    },
   
    {
        "name": "weight",
        "note": "$Weight",
        "type": "number",
        "visible": "data.desc == 'Meter'"
      }
  ],

  "chdefault": {
    "chan": "DI_1",
    "desc": "DI",
    "period": 10,
    "min": 0,
    "max": 0,
    "delta": 0,
    "dn": "",
    "weight":1
  },

  "genrules": {
    "AI": {
      "type": "200",
      "cl": "SensorA"
    },
    "DI": {
      "type": "100",
      "cl": "SensorD"
    },
    "Meter": {
      "cl": "Meter"
    }
  },

  "actions": [{}]
}
